{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Modifier un utilisateur{% endblock %}
{% block contenu %}  {{ parent() }}

<div class="form_ModifUtilisateur">
<form action="index.php?page=utilisateurModif" method="post" enctype="application/x-www-form-urlencoded">
    <h1>Modifier un utilisateur</h1>
    

    <label for="inputNomModification" class="sr-only">Nom :</label>
    <input type="text" id="inputNomModification" name="nom" class="form-control" placeholder="Doe" required autofocus>

    <label for="inputPrenom" class="sr-only">Prénom :</label>
    <input type="text" id="inputPrenomModification" name="prenom" class="form-control" placeholder="Jane" required autofocus>

    
    <label for="inputEmail" class="sr-only">E-mail :</label>
    <input type="email" id="inputEmailModification" name="inputEmailModification" class="form-control" placeholder="email@example.com" required autofocus>

    <label for="inputPassword" class="sr-only">Mot de passe :</label>
    <input type="password" id="inputPasswordModification" name="inputPasswordModification" class="form-control" placeholder="Mot de passe" required>

    <label for="inputPassword2" class="sr-only">Confirmer le mot de passe :</label>
    <input type="password" id="inputPassword2Modification" name="inputPassword2Modification" class="form-control" placeholder="Confirmation mot de passe" required>


    <label for="role" class="sr-only">Choisir le rôle :</label>
    <select class="form-control" name="role">
        <option value="1">Administrateur</option>
        <option value="2">Client</option>
    </select>
    <button class="btn btn-lg btn-primary btn-block" type="submit" name="btModifier">Modifier</button>
{% endblock %}
