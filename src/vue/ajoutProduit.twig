{% extends "base.html.twig" %}

{% block title %} {{ parent() }} Ajouter un produit {% endblock %}

{% block contenu %}

<div class="form_ajoutProduit">
<form action="index.php?page=ajoutProduit" method="post" enctype="application/x-www-form-urlencoded">
    <h1>Ajouter un produit</h1>
    

    <label for="inputNomAjoutProduit" class="sr-only">Nom :</label>
    <input type="text" id="inputNomAjoutProduit" name="inputNomAjoutProduit" class="form-control" required>

    <label for="inputDescriptionAjoutProduit" class="sr-only">Description :</label>
    <input type="text" id="inputDescriptionAjoutProduit" name="inputDescriptionAjoutProduit" class="form-control" required>

    
    <label for="inputPrixAjoutProduit" class="sr-only">Prix :</label>
    <input type="number" id="inputPrixAjoutProduit" name="inputPrixAjoutProduit" class="form-control" step="0.01" required>

    <label for="type" class="sr-only">Type :</label>
    <select class="form-control" name="type">
        <option value="1">Petit bouquet</option>
        <option value="2">Bouquet moyen</option>
        <option value="3">Grand bouquet</option>
    </select>

    <label for="saison" class="sr-only">Saison :</label>
    <select class="form-control" name="saison">
        <option value="1">Printemps</option>
        <option value="2">Été</option>
        <option value="3">Automne</option>
        <option value="4">Hiver</option>
    </select>

    <label for="inputQuantiteAjoutProduit" class="sr-only">Quantité :</label>
    <input type="number" id="inputQuantiteAjoutProduit" name="inputQuantiteAjoutProduit" class="form-control" required>

    <label for="inputImageAjoutProduit" class="sr-only">Image :</label>
    <br>
    <input type="file" name="inputImageAjoutProduit">
    <br>
    <br>
    <label for="inputTexteAlternatifImageAjoutProduit" class="sr-only">Texte alternatif :</label>
    <input type="text" id="inputTexteAlternatifImageAjoutProduit" name="inputTexteAlternatifImageAjoutProduit" class="form-control" required>

    <br>
    <button class="btn btn-lg btn-primary btn-block" type="submit" name="btnAjouterProduit">Ajouter le produit</button>
</form>
</div>

{% endblock %}